<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_article_comment"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/btn_commentpage_likeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableStart="@drawable/ic_favorite_border_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorTextPrimary"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="@string/commentpage_likeit_first"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_commentpage_likeit_more"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_commentpage_likeit_member1"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:foreground="@drawable/shape_all_rounded_rectangle_outline"
            android:foregroundTint="@color/colorArticleListItemLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_commentpage_likeit_member2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_all_rounded_rectangle_filled"
            android:backgroundTint="@color/colorBackground"
            android:foreground="@drawable/shape_all_rounded_rectangle_outline"
            android:foregroundTint="@color/colorArticleListItemLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_commentpage_likeit_member3"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/shape_all_rounded_rectangle_filled"
            android:backgroundTint="@color/colorBackground"
            android:foreground="@drawable/shape_all_rounded_rectangle_outline"
            android:foregroundTint="@color/colorArticleListItemLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_commentpage_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/articlelist_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_commentpage_likeit" />

    <TextView
        android:id="@+id/btn_commentpage_orderby_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:text="@string/commentpage_orderby_upload"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_commentpage_orderby_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="4dp"
        android:padding="8dp"
        android:text="@string/commentpage_orderby_new"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_commentpage_orderby_upload" />

    <Switch
        android:id="@+id/switch_commentpage_follow_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:switchPadding="8dp"
        android:text="@string/commentpage_follow_comment"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_article_comment_footer_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/articlelist_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>