<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPopularListBackground"
    android:minHeight="76dp"
    android:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_layout_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPopularListItemBackground"
        android:clickable="true"
        android:elevation="50dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_all_rounded_rectangle_filled"
            android:backgroundTint="@color/colorPopularListMoreIconBackground"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:tint="@color/colorPopularListTextPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>