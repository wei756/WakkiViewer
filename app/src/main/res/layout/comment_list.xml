<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_article_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/img_article_comment_subcomment"
        android:layout_width="24dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="4dp"
        android:tint="@color/colorArticleCommentAuthorText"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_subdirectory_arrow_right_black_24dp"/>

    <TextView
        android:id="@+id/icon_article_comment_author_color"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="0dp"
        android:layout_weight="1"
        android:background="@drawable/icon_shiftpsh"
        android:fontFamily="@font/montserrat_bold"
        android:text="S"
        android:textAlignment="center"
        android:textColor="@color/colorTitle"
        android:textSize="11sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_article_comment_author"
        app:layout_constraintEnd_toStartOf="@id/tv_article_comment_author"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/img_article_comment_subcomment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_article_comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/nanumsquareround_extrabold"
        android:text="작성자 이름"
        android:textColor="@color/colorArticleCommentAuthorText"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_article_comment_content"
        app:layout_constraintEnd_toStartOf="@id/tv_article_comment_time"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/icon_article_comment_author_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp" />

    <TextView
        android:id="@+id/tv_article_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nanumsquareround_bold"
        android:text="0000.00.00. 00:00"
        android:textColor="@color/colorArticleCommentTimeText"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_article_comment_author"
        app:layout_constraintStart_toEndOf="@id/tv_article_comment_author"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_article_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nanumsquareround_bold"
        android:text="댓글 어쩌구저쩌구"
        android:textColor="@color/colorArticleCommentContentText"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/layout_article_comment_reply"
        app:layout_constraintStart_toEndOf="@id/img_article_comment_subcomment"
        app:layout_constraintTop_toBottomOf="@id/tv_article_comment_author" />


    <LinearLayout
        android:id="@+id/layout_article_comment_reply"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_article_comment_content">

        <TextView
            android:id="@+id/icon_article_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/xe_icon"
            android:lineSpacingExtra="6dp"
            android:text="@string/xi_reply"
            android:textColor="@color/colorArticleVoteText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_article_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareround_bold"
            android:text="댓글"
            android:textColor="@color/colorArticleHeaderText"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_article_viewer_footer_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorArticleCommentBottomBorder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_article_comment_reply" />

</androidx.constraintlayout.widget.ConstraintLayout>