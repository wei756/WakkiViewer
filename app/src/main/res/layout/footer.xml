<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:background="@color/colorArticleListFooterBackground"
    android:padding="28dp">

    <TextView
        android:id="@+id/tv_article_footer_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        android:text="â“’ Naver Corp."
        android:textColor="@color/colorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_article_footer_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pixel_license"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/colorArticleListFooterLicenseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_article_footer_copyright"
        android:paddingBottom="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>