<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:paddingTop="32dp">

    <TextView
        android:id="@+id/tv_article_list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:letterSpacing="0"
        android:text="게시판"
        android:textColor="@color/colorTextPrimary"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/view_article_list_header_bottomline_bg"
        app:layout_constraintEnd_toStartOf="@id/tv_article_list_mainpage_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_article_list_mainpage_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:text="more"
        android:textColor="@color/colorTextSecondary"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_article_list_header_title"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_article_list_header_bottomline_bg"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorArticleListItemLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_article_list_header_title" />


</androidx.constraintlayout.widget.ConstraintLayout>